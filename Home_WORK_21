
Задача 21
Напишите программу, которая принимает на вход координаты двух точек и находит расстояние между ними в 3D пространстве.
A (3,6,8); B (2,1,-7), -> 15.84
A (7,-5, 0); B (1,-1,9) -> 11.53




Console.WriteLine("Insert Coordinate A in OS x ");
double x1 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insert Coordinate A in OS y ");
double y1 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insert Coordinate A in OS z ");
double z1 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insert Coordinate B in OS x ");
double x2 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insert Coordinate B in OS y ");
double y2 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insert Coordinate B in OS z ");
double z2 = Convert.ToDouble(Console.ReadLine());

double x = Math.Sqrt(Math.Pow((x2 - x1), 2) + Math.Pow((y2 - y1), 2) + Math.Pow((z2 - z1), 2));

Console.WriteLine($"Length of the segment {x:f2}");
